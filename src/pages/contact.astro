---
import Contactform from "@components/contactform.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import Layout from "@layouts/Layout.astro";
import { Icon } from "astro-icon/components";
---

<Layout title="Contact">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Contact</Fragment>
      <Fragment slot="desc">We are here to help.</Fragment>
    </Sectionhead>

    <div class="grid md:grid-cols-2 gap-10 mx-auto max-w-4xl mt-16">
      <div>
        <h2 class="font-medium text-2xl text-green-800">Contactez VÃ©ronique</h2>
        <p class="text-lg leading-relaxed text-green-600 mt-3">
          Have something to say? We are here to help. Fill up the form or send
          an email or call.
        </p>
        <div class="mt-5">
          <div class="flex items-center mt-2 space-x-2 text-green-700">
            <Icon class="text-green-400 w-4 h-4" name="uil:map-marker" />
            <span>1734 Sanfransico, CA 93063</span>
          </div>
          <div class="flex items-center mt-2 space-x-2 text-green-700">
            <Icon class="text-green-400 w-4 h-4" name="uil:envelope" />
            <a href="mailto:veroniqueharruis@gmail.com" class="hover:text-green-900">
              veroniqueharruis@gmail.com
            </a>
          </div>
          <div class="flex items-center mt-2 space-x-2 text-green-700">
            <Icon class="text-green-400 w-4 h-4" name="uil:phone" />
            <a href="tel:+1 (987) 4587 899" class="hover:text-green-900">
              +1 (987) 4587 899
            </a>
          </div>
        </div>
      </div>
      <div>
        <Contactform />
      </div>
    </div>
  </Container>
</Layout>
