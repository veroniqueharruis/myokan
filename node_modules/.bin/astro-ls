#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/Users/olivier.carrere/Downloads/myokan/node_modules/@astrojs/language-server/bin/node_modules:/Users/olivier.carrere/Downloads/myokan/node_modules/@astrojs/language-server/node_modules:/Users/olivier.carrere/Downloads/myokan/node_modules/@astrojs/node_modules:/Users/olivier.carrere/Downloads/myokan/node_modules:/Users/olivier.carrere/Downloads/node_modules:/Users/olivier.carrere/node_modules:/Users/node_modules:/node_modules:/Users/olivier.carrere/Downloads/myokan/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/Users/olivier.carrere/Downloads/myokan/node_modules/@astrojs/language-server/bin/node_modules:/Users/olivier.carrere/Downloads/myokan/node_modules/@astrojs/language-server/node_modules:/Users/olivier.carrere/Downloads/myokan/node_modules/@astrojs/node_modules:/Users/olivier.carrere/Downloads/myokan/node_modules:/Users/olivier.carrere/Downloads/node_modules:/Users/olivier.carrere/node_modules:/Users/node_modules:/node_modules:/Users/olivier.carrere/Downloads/myokan/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../@astrojs/language-server/bin/nodeServer.js" "$@"
else
  exec node  "$basedir/../@astrojs/language-server/bin/nodeServer.js" "$@"
fi
